
<% if logged_in? %>
  <form action="/surveys" method="post" class='surveyForm'>
    <input type="text" placeholder="name of your survey" name="survey[name]">
    <div class="forms" data-question="1">
      <br><br>
      <input type="text" placeholder="question" name="question[question]">
      <br><br>
      <input type="text" placeholder="choice 1" name="question[choice1]">
      <br><br>
      <input type="text" placeholder="choice 2" name="question[choice2]">
      <br><br>
      <input type="text" placeholder="choice 3" name="question[choice3]">
      <br><br>
    </div>
    <div class="new_questions">
    </div>

    <input id="submitButton" type="submit" value="submit">
  </form>



<button id="addForm">Add a Question</button>


<% else %>

  <h2>Log in fool</h2>

<% end %>



